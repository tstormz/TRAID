<%= form_tag({:action => 'show', :search => true}, :method => 'post', :class => "form-horizontal") do %>
  <div class="row">
    <div class="col-sm-6 a-right">
        <%= label_tag(:name, "Item Name", :class => "control-label")  %>
    </div>
    <div class="col-sm-6 a-left">
        <%= text_field_tag(:name, params[:name]) %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-6 a-right">
        <%= label_tag(:item_type, "Type", :class => "control-label") %>
    </div>
    <div class="col-sm-6 a-left">
        <%= text_field_tag(:item_type, params[:item_type]) %>
    </div>
  </div>

  <%= submit_tag('Search', :class => "btn btn-primary") %>

<% end %>