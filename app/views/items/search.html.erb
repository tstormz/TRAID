<h1>Items#search</h1>

<%= form_tag({:action => 'show', :search => true}, :method => 'post', :class => "form-horizontal") do %>

<div class="form-group">
  <%= label_tag(:name, "Item Name")  %>
  <%= text_field_tag(:name, params[:name]) %>
</div>
<div class="form-group">
  <%= label_tag(:item_type, "Type") %>
  <%= text_field_tag(:item_type, params[:item_type]) %>
</div>

<%= submit_tag('Search', :class => "btn btn-primary") %>

<% end %>